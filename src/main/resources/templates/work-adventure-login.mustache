{{> header}}

<div class="mxt-wrapper--page-title">
    <div class="row">
        <div class="columns large-8 large-offset-2 menu-centered text-center">
            <h1>{{#i18n}}work-adventure.signin.title{{/i18n}}</h1>
        </div>
    </div>
</div>

<div class="mxt-wrapper--page-content">
    <div class="large-5 large-centered columns">
        <div class="callout">
            <div class="row">
                <div class="large-12 columns">
                    <form action="/2021/login" method="post">
                        <div class="row">
                            <div class="large-12 columns">
                                <div style="margin-bottom: 1em">{{#i18n}}work-adventure.signin.description{{/i18n}}</div>
                                <input type="text" name="ticket" placeholder="Ticket Yurplan" style="margin-bottom: 0"
                                    value="{{#ticket}}{{ticket}}{{/ticket}}"/>
                                <div style="margin-bottom: 1em" class="mxt-wrapper--error-callout"> {{#error}}{{#i18n}}{{error}}{{/i18n}}{{/error}}</div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="large-12 large-centered columns">
                                <input type="submit" class="button expand"
                                       value="{{#i18n}}login.action.signin{{/i18n}}"/>

                            </div>
                        </div>
                        <div>
                            <p>{{#i18n}}home.live.description2{{/i18n}} <a href="/2021/help">https://mixitconf.org/2021/help</a></p>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

{{> footer}}
