{{> header}}

<div class="mxt-wrapper--header">
    <div class="row">
        <div class="columns small-12 hide-for-small-only">
            <div class="text-right"><img src="/images/svg/mxt-icon--edition.svg" class="mxt-icon--edition"></div>
            <h1 class="hide">{{#i18n}}home.wrapper.title{{/i18n}}</h1>
            <span class="mxt-text--bigger">{{#i18n}}home.wrapper.text{{/i18n}}<img src="/images/svg/mxt-icon--heart.svg" class="mxt-icon--heart"></span>
            <br>
            <h2 style="padding-bottom: 2em">
                <small>{{#i18n}}home.wrapper.dates{{/i18n}}</small>
            </h2>
        </div>
        <div class="columns small-12 show-for-small-only">
            <h1 class="mxt-text--mobile-bigger">
            <span>{{#i18n}}home.wrapper.text{{/i18n}}<img src="/images/svg/mxt-icon--heart.svg" class="mxt-icon--heart"></span>
            </h1>
            <br>
            <h2 style="padding-bottom: 4em">
                <small>{{#i18n}}home.wrapper.dates{{/i18n}}</small>
            </h2>
        </div>
    </div>
</div>

<div class="row align-spaced">
    <div class="column column-block text-center">
        <h2 class="align-center">{{#i18n}}home.intro.title{{/i18n}}</h2>
        <p>{{#i18n}}home.intro.description{{/i18n}}</p>
    </div>
</div>

<div class="mxt-wrapper--white" style="padding-bottom: 3em">
